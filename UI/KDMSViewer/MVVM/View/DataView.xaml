<UserControl  x:Class="KDMSViewer.View.DataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KDMSViewer.View"
             xmlns:model="clr-namespace:KDMSViewer.Model"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts" 
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" 
             mc:Ignorable="d" 
             d:DesignHeight="1024" d:DesignWidth="1800">

    <!--xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"-->
    <UserControl.Resources>
        <Style TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontSize" Value="{StaticResource FontSizeRegular}" />
            <Setter Property="BorderThickness" Value="5"/>
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="-5,-5,-5,0"/>
            <Setter Property="Padding" Value="0,5,0,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="Black"></Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="0"
                Margin="5 5 0 5 "
                BorderThickness="1"
                BorderBrush="Gray"
                CornerRadius="5 0 0 5">
            <TreeView Foreground="White"
                      Background="Transparent"
                      BorderThickness="0"
                      FontSize="{StaticResource FontSizeSmall}"
                      ItemsSource="{Binding TreeItems}"
                      VirtualizingStackPanel.IsVirtualizing="True" 
                      VirtualizingStackPanel.VirtualizationMode="Recycling">

                <!--<i:Interaction.Behaviors>
                    <model:TreeViewSelectedItemBehavior SelectedItem="{Binding DLSelected, Mode=TwoWay}" />
                </i:Interaction.Behaviors>-->

                <!--<i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectedItemChanged">
                    <i:CallMethodAction TargetObject="{Binding}" MethodName="OnSelectionChanged" />
                </i:EventTrigger>
            </i:Interaction.Triggers>-->

                <TreeView.Resources>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                    </Style>
                    
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
                         Color="Black" />
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}"
                         Color="White" />
                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}"
                         Color="Black" />
                    <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}"
                         Color="White" />

                    <HierarchicalDataTemplate DataType="{x:Type model:TreeDataModel}" ItemsSource="{Binding DataModels}">
                        <StackPanel Orientation="Horizontal"
                                    Margin="0 -3 0 -3">
                            <CheckBox IsChecked="{Binding IsChecked}"
                                      Visibility="{Binding IsVisible}"
                                      Margin="5 0 0 0"
                                      VerticalAlignment="Center"
                                      VerticalContentAlignment="Center">

                                <!--<CheckBox.LayoutTransform>
                                    <ScaleTransform ScaleX="1.2" ScaleY="1.2" />
                                </CheckBox.LayoutTransform>-->

                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Checked">
                                        <i:CallMethodAction TargetObject="{Binding}" MethodName="OnCheckBoxChecked" />
                                    </i:EventTrigger>

                                    <i:EventTrigger EventName="Unchecked">
                                        <i:CallMethodAction TargetObject="{Binding}" MethodName="OnCheckBoxUnChecked" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </CheckBox>
                            <TextBlock Text="{Binding Name}"
                                       ToolTip="{Binding Tooltip}"
                                       Margin="5 0 5 0" >
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="MouseLeftButtonDown">
                                        <i:CallMethodAction TargetObject="{Binding}" MethodName="OnChecked" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </TextBlock>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                    <!--<DataTemplate DataType="{x:Type model:TreeItemModel}">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding IsChecked}"
                                  Margin="5 0 0 0"
                                  VerticalAlignment="Center"
                                  VerticalContentAlignment="Center">
                            <CheckBox.LayoutTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1" />
                            </CheckBox.LayoutTransform>
                        </CheckBox>
                        <TextBlock Text="{Binding Name}"
                                   FontSize="{StaticResource FontSizeSmall}"
                                   Margin="5 0 5 3"/>
                    </StackPanel>
                </DataTemplate>-->
                </TreeView.Resources>
            </TreeView>
        </Border>

        <GridSplitter Grid.Column="1" 
                      HorizontalAlignment="Stretch"
                      Background="Transparent"
                      Width="5"/>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <Grid Margin="0 0 0 5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <StackPanel Orientation="Horizontal">
                        <Border Grid.Row="0"
                                Margin="0 5 0 -1"
                                BorderThickness="1 1 1 0"
                                BorderBrush="Gray"
                                CornerRadius="0 5 0 0">

                            <Border.Style>
                                <Style TargetType="{x:Type Border}" >
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RealDataCheck}" Value="True">
                                            <Setter Property="Background" Value="Black"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding RealDataCheck}" Value="False">
                                            <Setter Property="Background" Value="Transparent"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <RadioButton Grid.Row="0"
                                        Content="실시간 데이터"
                                        Margin="10 5 15 5"
                                        Style="{StaticResource radiobtnType}"
                                        IsChecked="{Binding RealDataCheck}"
                                        Background="Transparent"
                                        FontSize="{StaticResource FontSizeRegular}" 
                                        VerticalContentAlignment="Center">

                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Checked">
                                        <i:CallMethodAction TargetObject="{Binding}" MethodName="OnRealDataChecked" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </RadioButton>

                            <!--<CheckBox Grid.Row="0"
                                        Content="실시간 데이터"
                                        Margin="5 5 10 5"
                                        Style="{StaticResource checkboxType}"
                                        IsChecked="{Binding RealDataCheck}"
                                        Background="Transparent"
                                        FontSize="{StaticResource FontSizeRegular}" 
                                        VerticalContentAlignment="Center">

                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Checked">
                                        <i:CallMethodAction TargetObject="{Binding}" MethodName="OnRealDataChecked" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </CheckBox>-->
                        </Border>

                        <Border Grid.Row="0"
                                Margin="0 5 0 -1"
                                BorderThickness="1 1 1 0"
                                BorderBrush="Gray"
                                CornerRadius="5 5 0 0">

                            <Border.Style>
                                <Style TargetType="{x:Type Border}" >
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding StatisticalCheck}" Value="True">
                                            <Setter Property="Background" Value="Black"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding StatisticalCheck}" Value="False">
                                            <Setter Property="Background" Value="Transparent"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <RadioButton Grid.Row="0"
                                        Content="통계 데이터"
                                        Margin="10 5 15 5"
                                        Style="{StaticResource radiobtnType}"
                                        Background="Transparent"
                                        IsChecked="{Binding StatisticalCheck}"
                                        FontSize="{StaticResource FontSizeRegular}" 
                                        VerticalContentAlignment="Center">

                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Checked">
                                        <i:CallMethodAction TargetObject="{Binding}" MethodName="OnStatisticalChecked" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </RadioButton>
                        </Border>

                        <Border Grid.Row="0"
                                Margin="0 5 0 -1"
                                BorderThickness="1 1 1 0"
                                BorderBrush="Gray"
                                CornerRadius="5 5 0 0">

                            <Border.Style>
                                <Style TargetType="{x:Type Border}" >
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding CommCheck}" Value="True">
                                            <Setter Property="Background" Value="Black"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding CommCheck}" Value="False">
                                            <Setter Property="Background" Value="Transparent"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <RadioButton Grid.Row="0"
                                        Content="통신 데이터"
                                        Margin="10 5 15 5"
                                        Style="{StaticResource radiobtnType}"
                                        Background="Transparent"
                                        IsChecked="{Binding CommCheck}"
                                        FontSize="{StaticResource FontSizeRegular}" 
                                        VerticalContentAlignment="Center">

                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Checked">
                                        <i:CallMethodAction TargetObject="{Binding}" MethodName="OnCommChecked" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </RadioButton>
                        </Border>
                    </StackPanel>
                </Grid>

                <Border Grid.Row="1"
                        Margin="0 0 5 0"
                        BorderThickness="0 0 1 0"
                        BorderBrush="Gray"
                        Width="auto"
                        HorizontalAlignment="Stretch"
                        CornerRadius="0 5 5 5">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0">
                            <Border Margin="0 0 5 0"
                                    BorderThickness="1 0 1 1"
                                    BorderBrush="Gray"
                                    Width="auto"
                                    HorizontalAlignment="Stretch"
                                    CornerRadius="0 0 0 0">
                                <Grid>
                                    <Border BorderThickness="0 1 0 0"
                                            Margin="181,0,0,0"
                                            BorderBrush="Gray"
                                            CornerRadius="0 0 0 5"
                                            Visibility="{Binding RealVisibility}" />

                                    <Border BorderThickness="0 1 0 0"
                                            Width="181"
                                            BorderBrush="Gray"
                                            HorizontalAlignment="Left"
                                            CornerRadius="0 0 0 5"
                                            Visibility="{Binding StatisticalVisibility}"/>

                                    <Border BorderThickness="0 1 0 0"
                                            Margin="343 0 0 0"
                                            BorderBrush="Gray"
                                            CornerRadius="0 0 0 5"
                                            Visibility="{Binding StatisticalVisibility}" />

                                    <Border BorderThickness="0 1 0 0"
                                            Width="343"
                                            BorderBrush="Gray"
                                            HorizontalAlignment="Left"
                                            CornerRadius="0 0 0 5"
                                            Visibility="{Binding CommVisibility}"/>

                                    <Border BorderThickness="0 1 0 0"
                                            Margin="504 0 0 0"
                                            BorderBrush="Gray"
                                            CornerRadius="0 0 0 5"
                                            Visibility="{Binding CommVisibility}" />

                                    <StackPanel Visibility="{Binding RealVisibility}"
                                                Orientation="Horizontal">

                                        <RadioButton Grid.Row="0"
                                                  Content="1분 실시간"
                                                  Margin="10 5 5 5"
                                                  Style="{StaticResource radiobtnType}"
                                                  IsChecked="{Binding SwitchCheck}"
                                                  FontSize="{StaticResource FontSizeSmall}" 
                                                  HorizontalAlignment="Right"
                                                  VerticalContentAlignment="Center">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Checked">
                                                    <i:CallMethodAction TargetObject="{Binding}" MethodName="OnSwitchChecked" />
                                                </i:EventTrigger>
                                                <!--<i:EventTrigger EventName="PreviewMouseLeftButtonDown">
                                                    <i:CallMethodAction TargetObject="{Binding}" MethodName="OnMouseLeftButtonDown" />
                                                </i:EventTrigger>-->
                                                <!--<i:EventTrigger EventName="Unchecked">
                                                    <i:CallMethodAction TargetObject="{Binding}" MethodName="OnUnChecked" />
                                                </i:EventTrigger>-->
                                            </i:Interaction.Triggers>
                                        </RadioButton>

                                        <RadioButton Grid.Row="0"
                                                     Content="15분 실시간"
                                                     Margin="5 0 5 0"
                                                     Style="{StaticResource radiobtnType}"
                                                     IsChecked="{Binding StatisticMinCheck}"
                                                     FontSize="{StaticResource FontSizeSmall}" 
                                                     HorizontalAlignment="Right"
                                                     VerticalContentAlignment="Center">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Checked">
                                                    <i:CallMethodAction TargetObject="{Binding}" MethodName="OnMinChecked" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </RadioButton>

                                        <RadioButton Grid.Row="0"
                                                  Content="알람 실시간"
                                                  Margin="10 0 10 0"
                                                  Style="{StaticResource radiobtnType}"
                                                  IsChecked="{Binding FiCheck}"
                                                  FontSize="{StaticResource FontSizeSmall}" 
                                                  HorizontalAlignment="Left"
                                                  VerticalContentAlignment="Center">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Checked">
                                                    <i:CallMethodAction TargetObject="{Binding}" MethodName="OnFiChecked" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </RadioButton>
                                    </StackPanel>
                                    <StackPanel Visibility="{Binding StatisticalVisibility}"
                                                Orientation="Horizontal" >
                                        <RadioButton Grid.Row="0"
                                                  Content="1일 통계"
                                                  Margin="10 0 10 0"
                                                  Style="{StaticResource radiobtnType}"
                                                  IsChecked="{Binding DayCheck}"
                                                  FontSize="{StaticResource FontSizeSmall}" 
                                                  HorizontalAlignment="Right"
                                                  VerticalContentAlignment="Center">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Checked">
                                                    <i:CallMethodAction TargetObject="{Binding}" MethodName="OnDayStatChecked" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </RadioButton>

                                        <RadioButton Grid.Row="0"
                                                  Content="시간 통계"
                                                  Margin="5 0 10 0"
                                                  Style="{StaticResource radiobtnType}"
                                                  IsChecked="{Binding StatisticHourCheck}"
                                                  FontSize="{StaticResource FontSizeSmall}" 
                                                  HorizontalAlignment="Right"
                                                  VerticalContentAlignment="Center">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Checked">
                                                    <i:CallMethodAction TargetObject="{Binding}" MethodName="OnHourChecked" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </RadioButton>

                                        <RadioButton Grid.Row="0"
                                                  Content="일 통계"
                                                  Margin="5 0 10 0"
                                                  Style="{StaticResource radiobtnType}"
                                                  IsChecked="{Binding StatisticDayCheck}"
                                                  FontSize="{StaticResource FontSizeSmall}" 
                                                  HorizontalAlignment="Right"
                                                  VerticalContentAlignment="Center">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Checked">
                                                    <i:CallMethodAction TargetObject="{Binding}" MethodName="OnDayChecked" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </RadioButton>

                                        <RadioButton Grid.Row="0"
                                                  Content="월 통계"
                                                  Margin="5 0 10 0"
                                                  Style="{StaticResource radiobtnType}"
                                                  IsChecked="{Binding StatisticMonthCheck}"
                                                  FontSize="{StaticResource FontSizeSmall}" 
                                                  HorizontalAlignment="Right"
                                                  VerticalContentAlignment="Center">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Checked">
                                                    <i:CallMethodAction TargetObject="{Binding}" MethodName="OnMonthChecked" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </RadioButton>

                                        <RadioButton Grid.Row="0"
                                                  Content="년 통계"
                                                  Margin="5 0 20 0"
                                                  Style="{StaticResource radiobtnType}"
                                                  IsChecked="{Binding StatisticYearCheck}"
                                                  FontSize="{StaticResource FontSizeSmall}" 
                                                  HorizontalAlignment="Left"
                                                  VerticalContentAlignment="Center">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Checked">
                                                    <i:CallMethodAction TargetObject="{Binding}" MethodName="OnYearChecked" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </RadioButton>
                                    </StackPanel>

                                    <StackPanel Visibility="{Binding CommVisibility}"
                                                Orientation="Horizontal">

                                        <RadioButton Grid.Row="0"
                                                  Content="통신 성공률"
                                                  Margin="10 5 6 5"
                                                  Style="{StaticResource radiobtnType}"
                                                  IsChecked="{Binding CommDayCheck}"
                                                  FontSize="{StaticResource FontSizeSmall}" 
                                                  HorizontalAlignment="Right"
                                                  VerticalContentAlignment="Center">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Checked">
                                                    <i:CallMethodAction TargetObject="{Binding}" MethodName="OnCommDayChecked" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </RadioButton>

                                        <RadioButton Grid.Row="0"
                                                  Content="통신상태 이력"
                                                  Margin="10 0 10 0"
                                                  Style="{StaticResource radiobtnType}"
                                                  IsChecked="{Binding CommLogCheck}"
                                                  FontSize="{StaticResource FontSizeSmall}" 
                                                  HorizontalAlignment="Left"
                                                  VerticalContentAlignment="Center">
                                            <i:Interaction.Triggers>
                                                <i:EventTrigger EventName="Checked">
                                                    <i:CallMethodAction TargetObject="{Binding}" MethodName="OnCommLogChecked" />
                                                </i:EventTrigger>
                                            </i:Interaction.Triggers>
                                        </RadioButton>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>

                        <Border Grid.Column="1"
                                HorizontalAlignment="Stretch"
                                BorderThickness="1 1 1 1"
                                BorderBrush="Gray"
                                Width="auto"
                                CornerRadius="0 5 5 0">

                            <Grid HorizontalAlignment="Right" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <dxe:DateEdit Grid.Row="0" 
                                              Grid.Column="0"
                                              Margin="5"
                                              HorizontalContentAlignment="Center"
                                              FontSize="{StaticResource FontSizeSmall}"
                                              DisplayFormatString="yyyy-MM-dd"
                                              EditValue="{Binding FromDate}"
                                              ShowClearButton="False"
                                              MaxValue="{Binding ToDate}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="EditValueChanged">
                                            <i:CallMethodAction TargetObject="{Binding}" MethodName="OnFromEditValueChanged" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </dxe:DateEdit>

                                <dxe:ButtonEdit Grid.Row="0"
                                                Grid.Column="1"
                                                Margin="5"
                                                AllowDefaultButton="False"
                                                EditValue="{Binding FromDate}" 
                                                Mask="{Binding TimeEditMask}"
                                                MaskType="DateTime"
                                                DisplayFormatString="{Binding TimeEditMask}"
                                                FontSize="{StaticResource FontSizeRegular}"
                                                MaskUseAsDisplayFormat="True">  
                                    <dxe:ButtonEdit.Buttons>
                                        <dxe:SpinButtonInfo IsDefaultButton="True" />
                                    </dxe:ButtonEdit.Buttons>
                                </dxe:ButtonEdit>

                                <!--<DatePicker Grid.Row="0" 
                                            Grid.Column="0"
                                            Margin="5 0 5 0"
                                            FontSize="{StaticResource FontSizeRegular}"
                                            Height="35"
                                            SelectedDateFormat="Short"
                                            SelectedDate="{Binding FromDate}"
                                            Style="{StaticResource DatePickerIconResizingStyle}" />-->

                                <TextBlock Grid.Row="0" 
                                           Grid.Column="2" 
                                           Margin="5 0 5 0"
                                           Text="~"
                                           FontSize="20"
                                           Style="{StaticResource baseTextBlock}"/>

                                <dxe:DateEdit Grid.Row="0" 
                                              Grid.Column="3"
                                              Margin="5"
                                              HorizontalContentAlignment="Center"
                                              FontSize="{StaticResource FontSizeSmall}"
                                              DisplayFormatString="yyyy-MM-dd"
                                              EditValue="{Binding ToDate}"
                                              ShowClearButton="False"
                                              MinValue="{Binding FromDate}">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="EditValueChanged">
                                            <i:CallMethodAction TargetObject="{Binding}" MethodName="OnToEditValueChanged" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </dxe:DateEdit>

                                <dxe:ButtonEdit Grid.Row="0"
                                                Grid.Column="4"
                                                Margin="5"
                                                AllowDefaultButton="False"
                                                EditValue="{Binding ToDate}" 
                                                Mask="{Binding TimeEditMask}"
                                                MaskType="DateTime"
                                                DisplayFormatString="{Binding TimeEditMask}"
                                                FontSize="{StaticResource FontSizeRegular}"
                                                MaskUseAsDisplayFormat="True">
                                    <dxe:ButtonEdit.Buttons>
                                        <dxe:SpinButtonInfo IsDefaultButton="True" />
                                    </dxe:ButtonEdit.Buttons>
                                </dxe:ButtonEdit>

                                <!--<DatePicker Grid.Row="0" 
                                      Grid.Column="2"
                                      Margin="5 0 5 0"
                                      FontSize="{StaticResource FontSizeRegular}"
                                      Height="35"
                                      SelectedDateFormat="Short"
                                      SelectedDate="{Binding ToDate}"
                                      Style="{StaticResource DatePickerIconResizingStyle}" />-->

                                <Button Grid.Column="6"
                                        Margin="5 5 0 5"
                                        Width="80"
                                        Height="35"
                                        Content="조회"
                                        FontSize="{StaticResource FontSizeRegular}"
                                        Style="{StaticResource btnMainType}"
                                        Command="{Binding InquiryCommand}"
                                        IsEnabled="{Binding IsInquiry}"
                                        Tag="1"/>

                                <Button Grid.Column="7"
                                        Margin="5 5 5 5"
                                        Width="100"
                                        Height="35"
                                        Content="파일저장"
                                        FontSize="{StaticResource FontSizeRegular}"
                                        Style="{StaticResource btnMainType}"
                                        Command="{Binding FileSaveCommand}"
                                        Tag="1"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <Border Grid.Row="1" 
                    BorderThickness="1"
                    BorderBrush="Gray"
                    CornerRadius="0 0 5 0"
                    Margin="0 0 5 5">

                    <!--<ScrollViewer HorizontalScrollBarVisibility="Auto"
                                  VerticalScrollBarVisibility="Auto">-->
                        <Grid>
                            <ContentControl Content="{Binding RealViewModel}"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            VirtualizingStackPanel.IsVirtualizing="True" 
                                            VirtualizingStackPanel.VirtualizationMode="Recycling">
                                <ContentControl.Style>
                                    <Style TargetType="{x:Type ContentControl}">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SwitchCheck}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding SwitchCheck}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>

                            <ContentControl Content="{Binding StatisticsMinViewModel}"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            VirtualizingStackPanel.IsVirtualizing="True" 
                                            VirtualizingStackPanel.VirtualizationMode="Recycling">
                                <ContentControl.Style>
                                    <Style TargetType="{x:Type ContentControl}">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding StatisticMinCheck}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding StatisticMinCheck}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>

                            <ContentControl Content="{Binding FiViewModel}"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                        VirtualizingStackPanel.IsVirtualizing="True" 
                                        VirtualizingStackPanel.VirtualizationMode="Recycling">
                                <ContentControl.Style>
                                    <Style TargetType="{x:Type ContentControl}">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding FiCheck}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding FiCheck}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>

                            <ContentControl Content="{Binding DayStatViewModel}"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                        VirtualizingStackPanel.IsVirtualizing="True" 
                                        VirtualizingStackPanel.VirtualizationMode="Recycling">
                                <ContentControl.Style>
                                    <Style TargetType="{x:Type ContentControl}">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DayCheck}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>

                    <Button Grid.Row="1"
                                Margin="10 5 5 5"
                                Height="auto"
                                FontSize="{StaticResource FontSizeMiddle}"
                                Style="{StaticResource btnMainType}"
                                Command="{Binding TrandInfoCommand}"
                                Tag="{Binding TrandEnabled}">
                        <Button.Content>
                            <Grid Margin="10 0 10 0">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <fa6:SvgAwesome Icon="Solid_ChartLine"
                                                Margin="0 5 0 0"
                                                Height="30"/>
                                <TextBlock Grid.Column="0"
                                           Grid.Row="1"
                                           FontSize="{StaticResource FontSizeMiddle}"
                                           Text="트&#10;랜&#10;드"
                                           Margin="4 0 0 5"/>
                            </Grid>
                        </Button.Content>
                    </Button>

                    <Button Grid.Row="2"
                            Margin="10 5 5 5"
                            Width="auto"
                            Height="auto"
                            FontSize="{StaticResource FontSizeMiddle}"
                            Style="{StaticResource btnMainType}"
                            Command="{Binding OperationConfigCommand}"
                            Tag="{Binding OperEnabled}">
                        <Button.Content>
                            <Grid Margin="10 0 10 0">
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <fa6:SvgAwesome Icon="Solid_Gear"
                                                Margin="0 5 0 0"
                                                Height="30"/>
                                <TextBlock Grid.Column="0"
                                           Grid.Row="1"
                                           FontSize="{StaticResource FontSizeMiddle}"
                                           Text="운&#10;영&#10;환&#10;경"
                                           Margin="4 0 0 5"/>
                            </Grid>
                        </Button.Content>
                    </Button>

